<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/main_menu_background"
    >


    <FrameLayout
        android:layout_width="951dp"
        android:layout_height="650dp"
        android:layout_centerInParent="true"
        tools:ignore="MissingConstraints,UselessParent,TextSizeCheck">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:text="Â¡NIVEL COMPLETADO!"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="80sp"
            tools:ignore="HardcodedText,VisualLintOverlap" />

        <ImageButton
            android:id="@+id/wonButton"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="200dp"
            android:layout_marginTop="180dp"
            android:background="@drawable/rounded_button_continue"
            android:importantForAccessibility="no"
            android:padding="65dp"
            android:scaleType="centerInside"
            android:src="@drawable/next"
            app:cornerRadius="30dp"
            tools:ignore="VisualLintBounds" />

        <ImageButton
            android:id="@+id/restartButton"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="200dp"
            android:background="@drawable/rounded_button_restart"
            android:importantForAccessibility="no"
            android:padding="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/restart"
            app:cornerRadius="30dp"
            tools:ignore="VisualLintBounds" />

        <TextView
            android:id="@+id/levelText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="610dp"
            android:layout_marginBottom="50dp"
            android:gravity="center|bottom"
            android:textColor="@color/white"
            android:textSize="40sp"
            tools:ignore="VisualLintOverlap" />

        <TextView
            android:id="@+id/timeText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="50dp"
            android:gravity="center|bottom"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/attemptsText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="530dp"
            android:layout_marginBottom="50dp"
            android:gravity="center|bottom"
            android:textColor="@color/white"
            android:textSize="40sp"
            tools:ignore="VisualLintBounds" />


    </FrameLayout>

</RelativeLayout>